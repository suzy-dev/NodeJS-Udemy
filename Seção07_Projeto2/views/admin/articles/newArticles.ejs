<%- include('../../partials/header.ejs') %>
<body>
<%- include('../../partials/navbar.ejs') %>

<div class="container">
    <hr>
    <h1 style="font-family: Arial Narrow, sans-serif;">Novo Artigo</h1>
    <hr>
    <div class="card bg-dark">
        <div class="card-body"> 
            <form action="/admin/articles/new/save" method="POST">
                <h2 style="font-family: Arial Narrow, sans-serif;">Título:</h2>
                <input class="form-control" placeholder="Defina o título do artigo" type="text" name="titleArticle"><br>
                <h2 style="font-family: Arial Narrow, sans-serif;">Selecione a categoria:</h2>
                <select class="form-control" name="selectCategory">
                    <% categories.forEach(categories => { %>
                        <option value=" <%= categories.id %> "> <%= categories.title %> </option>
                    <% }) %>
                </select><br>
                <textarea id="article" class="form-control" name="bodyArticle" ></textarea>
                <br>
                <button class="btn btn-success">Cadastrar</button>
                <hr>
            </form>
        </div>
    </div>
</div>  

</body>
<%- include('../../partials/footer.ejs') %>

<script src="/tinymce/tinymce.min.js"></script>
<script>

    tinymce.init({
        language: 'pt_BR',
        selector: "#article",
        plugins: ['advlist','lists','image', 'wordcount', 'emoticons', 'autolink','charmap','table','link','help','table'],
        placeholder: "Descreva seu artigo aqui..."
    })

</script>